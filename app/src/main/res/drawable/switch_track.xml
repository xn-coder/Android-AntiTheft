<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#939CE3" /> <!-- Change to your desired color when the switch is ON -->
            <corners android:radius="20dp" /> <!-- Adjust as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C7CAE8" /> <!-- Change to your desired color when the switch is OFF -->
            <corners android:radius="20dp" /> <!-- Adjust as needed -->
        </shape>
    </item>
</selector>